#función con parámetro: name
#no necesito definir primero name
def hi(name):
    print("Hi, ", name)
    
hi("Greg")

#funciones con parámetros
def hiAll(name1, name2):
    print("Hi,", name2)
    print("Hi,", name1)
    
def address(street, city, postalCode):
    print("Your address is:", street, "St.,", city, postalCode)
s=input("Street: ")
pC=input("Postal Code: ")
c=input("City:")

address(s, c, pC)    

def subtra(a, b):
    print(a-b)

subtra(5,2)
subtra(2,5)
subtra(5, b=2)
#este no funciona 
subtra(a=5, 2)

