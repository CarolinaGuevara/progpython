def 1100kmtompg(litres):
    gallons=litres/3.785411784
    miles=100*1000/1609.344
    return miles/gallons
def mpgtol100km(miles):
    km100=miles*1609.344/1000/100
    litres=3.785411784
    return litres/km100

def isYearLeap(year):
    if year % 4==0:
        return True
    else:
        return False
year=int(input("inserte un año entre 1900 y 2015:"))
print(year, isYearLeap(year))

def isYearLeap(year):
    if year % 4!=0:
        return False
    elif year%100 !=0:
        return True
    elif year % 400 !=0:
        return False
    else:
        return True
    
year=int(input("inserte un año entre 1900 y 2015:"))
print(year, isYearLeap(year))

  
def isYearLeap(myList):
    for year in myList:
        if year % 4==0:
            return True
        else:
            return False
year=int(input("inserte 3 años entre 1900 y 2015:"))
