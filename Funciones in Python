def hiEverybody(myList):
    for name in myList:
        print("Hi, ", name)
        
hiEverybody(["Adam", "john", "lucy", "martina"])

def createList(n):
    myList=[]
    for i in range(n):
        myList.append(i)
    return myList

print(createList(10))
print(createList(20))

